<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/authorTextViewOnAlertID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/businessNameFontSize"/>

    <RatingBar
        android:id="@+id/overallRatingOnAlertRatingBarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"/>

    <RatingBar
        android:id="@+id/categoryOneRatingOnAlertRatingBarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:stepSize="0.5"/>

    <RatingBar
        android:id="@+id/categoryTwoRatingOnAlertRatingBarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:stepSize="0.5"/>

    <RatingBar
        android:id="@+id/categoryThreeRatingOnAlertRatingBarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:stepSize="0.5"/>

    <RatingBar
        android:id="@+id/categoryFourRatingOnAlertRatingBarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:stepSize="0.5"/>

    <RatingBar
        android:id="@+id/categoryFiveRatingOnAlertRatingBarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:stepSize="0.5"/>

    <TextView
        android:id="@+id/reviewTextViewOnAlertID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="review.."
        android:textSize="@dimen/businessNameFontSize"/>





</LinearLayout>